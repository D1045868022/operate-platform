<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zr.loans.mapper.DaifangkuanMapper">
    <!--   //根据条件查询
    List<DaiFangKuanSelectVo> findAll(DaiFangKuanSelectVo daiFangKuanSelectVo);-->
    <select id="findAll" parameterType="com.zr.loans.pojo.DaiFangKuanSelectVo" resultType="com.zr.loans.pojo.Loans">
        select
            oldNumber,createTime,
            management,applyAmount,
            applyTerm,periodicContributions,
            name,idCode,
            managementLoanAmount,InteractionLoanAmount,
            status
        FROM loans
        WHERE 1=1
        <if test="status!=null">
          and  status=#{status}
        </if>
        <if test="name!=null and name!=''">
            and name=#{name}
        </if>
        <if test="phone!=null">
            and phone=#{phone}
        </if>
        <if test="merchant!=null and merchant!=''">
            and merchant=#{merchant}
        </if>
        limit #{offset},#{pageSize}
    </select>

    <!--//查询总数量
    Integer queryCount();-->
    <select id="queryCount" parameterType="com.zr.loans.pojo.DaiFangKuanSelectVo" resultType="java.lang.Integer">
        select count(id)
        FROM daifangkuan
        WHERE 1=1
        <if test="statusValue!=null">
            and status=#{statusValue}
        </if>
        <if test="name!=null and name!=''">
            and name=#{name}
        </if>
        <if test="phone!=null">
            and phone=#{phone}
        </if>
        <if test="merchant!=null and merchant!=''">
            and merchant=#{merchant}
        </if>
    </select>


</mapper>


