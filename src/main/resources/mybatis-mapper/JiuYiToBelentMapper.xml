<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zr.loans.mapper.JiuyidaifangkuanMapper">
    <select id="queryPage" parameterType="com.zr.loans.pojo.JiuYiToBelentSelectVo" resultType="com.zr.loans.pojo.Loans">
       select
        oldNumber,createTime,
        management,applyAmount,
        applyTerm,periodicContributions,
        name,idCode,
        managementLoanAmount,InteractionLoanAmount,
        status
       from
       loans
        where 1=1
        and
        status=8
        or
        status=10
        <if test="channel != null and channel != ''">
           and management=#{channel}
        </if>
        <if test="managementStatus != null">
            and  managementStatus=#{managementStatus}
        </if>
        <if test="customerName != null and customerName != ''">
            and  name=#{customerName}
        </if>
        <if test="phone != null and phone != ''">
            and  phone=#{phone}
        </if>
        <if test="merchant != null and merchant != ''">
            and  merchant=#{merchant}
        </if>
        limit #{offset},#{pageSize}
    </select>

